@using ElementFactory.Models.Test;

@model TestViewModel;

@{
    ViewBag.Title = "Добави тест";
}

<form asp-controller="Question" asp-action="AddTestPost" method="post" id="addTestForm">
    <label asp-for="Title">Заглавие</label>
    <input asp-for="Title" placeholder="Запиши заглавие на тест тук..." />
    <span asp-validation-for="Title" id="validationTitle" class="aspValidationTitle"></span>
    <label asp-for="Category">Категория</label>
    <select asp-for="Category">
        <option>7 клас</option>
        <option>8-9 клас</option>
        <option>10 клас</option>
        <option>11-12 клас</option>
    </select>

    <label asp-for="QuestionsCounter">Брой въпроси</label>
    <input asp-for="QuestionsCounter" placeholder="Запиши брой въпроси тук..."/>
    <span asp-validation-for="QuestionsCounter" class="aspValidationTitle"></span>

    <input type="submit" value="Създай" />
</form>

<link href="~/css/site.css" />